{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/uber-services/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/uber-services/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/uber-services",
  "projects": {
    "logging-service": {
      "type": "application",
      "root": "apps/logging-service",
      "entryFile": "main",
      "sourceRoot": "apps/logging-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging-service/tsconfig.app.json"
      }
    },
    "ridder-service": {
      "type": "application",
      "root": "apps/ridder-service",
      "entryFile": "main",
      "sourceRoot": "apps/ridder-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ridder-service/tsconfig.app.json"
      }
    },
    "uber-services": {
      "type": "application",
      "root": "apps/uber-services",
      "entryFile": "main",
      "sourceRoot": "apps/uber-services/src",
      "compilerOptions": {
        "tsConfigPath": "apps/uber-services/tsconfig.app.json"
      }
    }
  }
}